/**app.wxss**/
page {
  background-color: #efefef;
  font-size: 22rpx;
}
.curr_title{
  font-size: 30rpx;
  text-align: center;
  padding:40rpx 0 30rpx;
}
.curr_title>text{
  border-bottom:2rpx solid #2db5a3;
  padding: 0 0 10rpx;
  display: inline-block;
  margin-bottom: 60rpx;
}
.curr_banner{
    position: relative;
}
.curr_banner image{
  height: 200rpx;
  width: 100%;
  display: block;
}
.curr_banner>text{
  position: absolute;
  font-size: 42rpx;
  color: #666;
  left: 50%;
  top: 85%;
  transform: translate(-50%,-50%);
}
.curr_banner>text.title_c{
  top: 50%;
  transition: 1.5s;
}
.case_title{
  height: 234rpx;
}
.case_title image{
  width: 750rpx;
  height: 234rpx;
}
.case_bg{
  background: #66cccc;
  padding: 40rpx 20rpx;
}
.case_head_curr{
  text-align: center;
  font-size: 36rpx;
  padding-bottom: 15rpx;
}
.case_head_curr view{
  line-height: 26rpx;
}
.case_head_curr text{
  font-size: 24rpx;
}
.case_head_text {
  font-size: 28rpx;
  line-height: 40rpx;
  text-indent: 2em;
  text-align: justify;
}

.loadding{
  padding: 80rpx 0;
  text-align: center;
}
.loadding image{
  width: 40rpx;
  height: 40rpx;
}